{
  "include": [
    "src","test"
  ],  
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/dev/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/dev/impl",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  }
}